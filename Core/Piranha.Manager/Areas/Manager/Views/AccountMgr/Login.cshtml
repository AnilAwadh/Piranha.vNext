@{
	Layout = null;
}

<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

	<title>@Piranha.Manager.Resources.Account.Login</title>

	<link href="~/areas/manager/assets/img/icon.ico" rel="icon" type="image/x-icon">
	<link href="~/areas/manager/assets/img/icon.ico" rel="shortcut icon" type="image/x-icon">
	<link href="~/areas/manager/assets/css/style.min.css" rel="stylesheet" type="text/css">
	<link href="//fonts.googleapis.com/css?family=Open+Sans:300,400,600" rel="stylesheet" type="text/css">
</head>
<body id="login">
	<div class="container">
		<div class="panel panel-white">
			@using (Html.BeginForm("LoginUser", "AccountMgr", FormMethod.Post, new { @role = "form", @class = "form" })) {
				@Html.AntiForgeryToken()
				<div class="panel-body">
					<div class="account-logo"></div>
					<p class="account-banner">
						Piranha CMS
						<small>Version @Piranha.Utils.GetAssemblyVersion()</small>
					</p>
					<div class="form-group">
						@Html.TextBox("Username", "", new { @class = "form-control", @placeholder = @Piranha.Manager.Resources.Account.UsernamePlaceholder })
					</div>
					<div class="form-group">
						@Html.Password("Password", "", new { @class = "form-control", @placeholder = @Piranha.Manager.Resources.Account.PasswordPlaceholder })
					</div>
					<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-ok"></span></button>
				</div>
			}
		</div>
	</div>
	<script type="text/javascript">
		// Set focus to the first input field
		document.getElementById('Username').focus();
	</script>
</body>
</html>
