@{
	ViewBag.Title = Piranha.Manager.Resources.Author.ListTitle;
}
@section script {
	@Html.Partial("Partial/Editor", new { height = 150, autoresize = false })

	<script type="text/javascript">
		ko.applyBindings(new manager.models.author());
	</script>
}

<div class="container-fluid">
	<!-- Form -->
	<div class="row">
		<div class="col-sm-12">
			<div class="panel panel-primary panel-add" >
				<div id="addAuthorTitle" class="panel-heading">
					<h3 class="panel-title">
						<span class="glyphicon glyphicon-plus pull-right"></span>
						<a data-toggle="collapse" href="#addAuthor" aria-expanded="false" aria-controls="addAuthor" data-bind="text: title">
							Add new author
						</a>
					</h3>
				</div>
			    <div id="addAuthor" class="panel-collapse collapse" role="tabpanel" aria-labelledby="addAuthorTitle">
					<div class="panel-body">
						<form role="form" class="form">
							<div class="row">
								<div class="col-sm-6">
									<div class="form-group" data-bind="css: { 'has-error has-feedback': nameValid() != true }">
										<input id="authorName" type="text" class="form-control" placeholder="Add author name" data-bind="value: name" />
										<!-- ko if: !nameValid() -->
										<span class="glyphicon glyphicon-remove form-control-feedback"></span>
										<!-- /ko -->
									</div>
								</div>
								<div class="col-sm-6">
									<div class="form-group" data-bind="css: { 'has-error has-feedback': emailValid() != true }">
										<input id="authorEmail" name="Email" class="form-control" placeholder="Author email" data-bind="value: email" />
										<!-- ko if: !emailValid() -->
										<span class="glyphicon glyphicon-remove form-control-feedback"></span>
										<!-- /ko -->
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										<textarea id="authorDescription" class="form-control editor" placeholder="Optional description" data-bind="text: description"></textarea>
									</div>
								</div>
							</div>
						</form>
					</div>
					<div class="panel-footer">
						<button class="btn btn-primary" data-bind="click: save">@Piranha.Manager.Resources.Global.Save</button>
						<button class="btn btn-danger" data-bind="click: clear">Cancel</button>
					</div>
				</div>
			</div>
		</div>
	</div>

	<table id="authorList" class="table table-striped table-main">
		<thead>
			<tr>
				<th><span class="sort desc" data-sort="author-name">@Piranha.Manager.Resources.Global.Name</span></th>
				<th><span class="sort" data-sort="author-email">@Piranha.Manager.Resources.Global.Email</span></th>
				<th class="date"><span class="sort" data-sort="author-updated">@Piranha.Manager.Resources.Global.Updated</span></th>
				<th class="date"><span class="sort" data-sort="author-created">@Piranha.Manager.Resources.Global.Created</span></th>
				<th class="actions one"></th>
			</tr>
		</thead>
		<tbody class="list">
			<!-- ko foreach: { data: items, as: 'item' } -->
				<tr>
					<td class="author-name"><a href="#" data-bind="click: function (item) { $root.edit(item.Id); }, text: item.Name"></a></td>
					<td class="author-email" data-bind="text: item.Email"></td>
					<td class="author-updated" data-bind="text: item.Updated"></td>
					<td class="author-created" data-bind="text: item.Created"></td>
					<td class="actions">
						<a class="delete" href="#" data-bind="click: function (item) { $root.delete(item.Id); }"></a>
					</td>
				</tr>
			<!-- /ko -->
		</tbody>
	</table>
</div>
