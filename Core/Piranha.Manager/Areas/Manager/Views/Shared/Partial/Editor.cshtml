@{
	var height = ViewData.Eval("height") != null ? (int)ViewData.Eval("height") : 340;
	var autoresize = ViewData.Eval("autoresize") != null ? (bool)ViewData.Eval("autoresize") : true;
}
<script type="text/javascript" src="~/manager/assets.ashx/vendor/tiny_mce/tinymce.min.js"></script>
<script type="text/javascript">
	tinymce.init({
		mode: 'specific_textareas',
		editor_selector: "editor",
		convert_urls: false,
		plugins: [
		"@(autoresize ? "autoresize" : "") autolink code hr paste link"
		],
		width: "100%",
		height: "@height",
		@if (autoresize) {
			<text>autoresize_min_height: 340,</text>
		}
		menubar: false,
		statusbar: false,
		content_css: "@Url.Content("~/manager/assets.ashx/css/editor.min.css")",
		toolbar: "bold italic underline | bullist numlist hr | formatselect removeformat | cut copy paste | link | code",
	});
</script>
